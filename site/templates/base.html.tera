<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Workstation - Accounts</title>

        <link rel="stylesheet" href="/static/css/bootstrap.min.css">
        <link rel="stylesheet" href="/static/css/style.css">
        <link rel="stylesheet" href="/static/lib/noty.css">
        <link rel="stylesheet" href="/static/lib/themes/bootstrap-v4.css">
        {% block style %}{% endblock style %}
    </head>
    <body>
        <div class="h-100">
            <div id="particles-js"></div>
            <div class="d-flex justify-content-center h-100">
                {% block content %}{% endblock content %}
            </div>
        </div>
        <script src="/static/js/jquery.min.js"></script>
        <script src="/static/js/popper.min.js"></script>
        <script src="/static/js/particles.min.js"></script>
        <script src="/static/js/particles-settings.js"></script>
        <script src="/static/js/bootstrap.min.js"></script>
        <script src="/static/js/fontawesome.min.js"></script>
        <script src="/static/lib/noty.min.js"></script>
        <script>
            $(document).ready(function() {
                {% if flash and flash.0 == "success" %}
                    new Noty({
                        theme: 'bootstrap-v4',
                        type: 'success',
                        timeout: 3500,
                        text: '{{ flash.1 }}',
                    }).show();
                {% elif flash and flash.0 == "error" %}
                    new Noty({
                        theme: 'bootstrap-v4',
                        type: 'error',
                        timeout: 3500,
                        text: '{{ flash.1 }}',
                    }).show();
                {% endif %}
            });
        </script>
        {% block script %}{% endblock script %}
    </body>
</html>